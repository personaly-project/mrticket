    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "version": "1.0.1"
  },
  "paths": {
    "/api/event": {
      "post": {
        "tags": [
          "event"
        ],
        "summary": "Create a new event",
        "description": "creates a new event based on the initiator",
        "operationId": "create_event",
        "requestBody": {
          "description": "Initiator details",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateEventReq"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful operation"
          },
          "405": {
            "description": "Invalid input"
          }
        }
      },
      "put": {
        "tags": [
          "event"
        ],
        "summary": "Update an existing event (schedule)",
        "description": "Update an existing event (mvp just send confirmation sms)",
        "operationId": "schedule_on_event",
        "requestBody": {
          "description": "Event details",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ScheduleEventReq"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful operation"
          },
          "500": {
            "description": "Internal error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateEventReq": {
        "type": "object",
        "properties": {
          "initiator": {
            "$ref": "#/components/schemas/Initiator"
          }
        }
      },
      "ScheduleEventReq": {
        "type": "object",
        "properties": {
          "initiator": {
            "$ref": "#/components/schemas/Initiator"
          },
          "scheduler": {
            "$ref": "#/components/schemas/Scheduler"
          }
        }
      },
      "Initiator": {
        "type": "object",
        "properties": {
          "phone": {
            "type": "integer",
            "format": "int32",
            "example": 654163487
          },
          "username": {
            "type": "string",
            "example": "fehguy"
          },
          "countryCode": {
            "type": "integer",
            "format": "int32",
            "example": 34
          }
        }
      },
      "Scheduler": {
        "type": "object",
        "properties": {
          "phone": {
            "type": "integer",
            "format": "int32",
            "example": 640987654
          },
          "username": {
            "type": "string",
            "example": "fehguy"
          },
          "countryCode": {
            "type": "integer",
            "format": "int32",
            "example": 34
          }
        }
      }
    }
  }
}