generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  psw        String
  email      String   @unique
  username   String   @unique
  firstName  String
  lastName   String
  avatarUrl  String
  tickets    Ticket[]
  buyHistory String[]
}

model Ticket {
  id         String   @id @default(uuid())
  title      String
  ticket     String
  sold       Boolean
  seller     User     @relation(fields: [sellerId], references: [id])
  sellerId   String
  price      Int
  imgs       String[]
  event      Event    @relation(fields: [eventId], references: [id])
  eventId    String
  buyerId    String?
}

model Event {
  id         String   @id @default(uuid())
  eventType  String
  startHour  DateTime
  date       DateTime
  title      String
  performers String[]
  eventSpecs String?
  tickets    Ticket[]
  venue      Venue    @relation(fields: [venueId], references: [id])
  venueId    String
}

model Venue {
  id         String  @id @default(uuid())
  placeType  String
  address    String
  city       String
  country    String
  state      String
  timezone   String
  name       String
  events     Event[]
  venueSpecs String?
}
